<h1>My books and copies</h1>
<h2>Books</h2>

<ul>
  <% for book in @books.sort_by{|b| b[:title]} %>
    <li>
      <%= link_to book.title, book %>
    </li>
  <% end %>
</ul>

<%= link_to "New book", new_book_path %>

<h2>Copies</h2>
<ul>
  <% for copy in @copies.sort_by{|c| c[:bookId]} %>
    <li>
      <%= link_to copy.borrower, copy %>
    </li>
  <% end %>
</ul>

<%= link_to "New copy", new_copy_path %>